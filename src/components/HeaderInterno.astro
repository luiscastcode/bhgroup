---
interface Props {
  titulo: string;
  descrip: string;
   
}
const { titulo, descrip} = Astro.props;
---

<section class="bg-[url(/img/bg.webp)] bg-no-repeat bg-cover bg-center rounded-2xl">
  <div
    class="grid items-center justify-center px-4 py-8 mx-auto lg:gap-8 xl:gap-0 md:py-16 md:grid-cols-12"
  >
    <div class="mr-4 place-self-center md:col-span-7">
      <h3 class="text-primary-700 font-bold mb-4 tracking-tight">BerHoyte & Asociados</h3>
      <h1 class="text-amber-600 max-w-2xl mb-4 tracking-tight leading-none">
        {titulo}
      </h1>
      <p class="max-w-2xl mb-6 font-light text-fuente md:mb-8 md:text-xl">
        {descrip}
      </p>
    </div>
     <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
      <img class="w-[320px]" src="/img/mujer-feliz.png" alt="mockup" />
    </div>
  </div>
</section>
