---
interface Props {
  titulo: string;
  descrip: string;
   
}
const { titulo, descrip} = Astro.props;
---

<section class="bg-[url(/img/bg-servicios.webp)] bg-no-repeat bg-cover bg-center bg-linear-to-r from-zinc-500 to-amber-600 border-2 rounded-2xl">
  <div
    class="grid items-center justify-center px-4 py-8 mx-auto lg:gap-8 xl:gap-0 md:py-16 md:grid-cols-12"
  >
    <div class="mr-4 place-self-center md:col-span-7">
      <h1 class="text-slate-900 max-w-2xl mb-4 tracking-tight leading-none">
        {titulo}
      </h1>
      <p class="max-w-2xl mb-6 font-light text-gray-300 md:mb-8 md:text-xl">
        {descrip}
      </p>
    </div>
  </div>
</section>
