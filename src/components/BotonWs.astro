---
interface Props {
  nombre: string;
}

const { nombre } = Astro.props;
---

<a
  href="#"
  class="inline-flex items-center text-slate-200 bg-gradient-to-r from-blue-600 to-blue-500 hover:bg-gradient-to-l hover:from-blue-600 hover:to-indigo-400 focus:ring-4 focus:outline-none focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 uppercase"
>
  <i class="icofont-brand-whatsapp text-slate-200 mr-2"></i>

  {nombre}
</a>
