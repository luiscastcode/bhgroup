---
import BotonWs from "./BotonWs.astro"
interface Props {
    titulo:string, 
    descrip:string
}
const {titulo, descrip} = Astro.props;
---

<section class="w-full bg-blue-100 rounded-lg">
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
            <h2 class="mb-4 text-4xl tracking-tight font-extrabold leading-tight text-gray-900 dark:text-white">{titulo}</h2>
            <p class="mb-6 font-light text-gray-500 dark:text-gray-400 md:text-lg">{descrip}</p>
              <BotonWs nombre="Consulta Por Whatsapp"/>
        </div>
    </div>
</section>