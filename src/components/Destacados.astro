---
interface Props {
  itemtitulo: string;
  descrip: string;
  url: string;
  icon: string;
}
const { itemtitulo, descrip, url, icon } = Astro.props;
---

<div class="destacados border-2 border-primary-700 rounded-2xl p-5">
  <div
    class="flex justify-center items-center mb-4 w-10 h-10 rounded-full lg:h-12 lg:w-12"
  >
    <i class={`icofont-duotone icofont-${icon} icofont-3x`}></i>
  </div>
  <h3 class="mb-2 text-xl font-bold text-gray-900">{itemtitulo}</h3>
  <p class="text-gray-900 font-medium my-4">{descrip}</p>
  <a
    href={url}
    class="inline-flex items-center text-amber-300 bg-gradient-to-r from-zinc-700 to-amber-900 hover:bg-gradient-to-l hover:from-blue-600 hover:to-indigo-600 focus:ring-4 focus:outline-none focus:ring-blue-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 capitalize"
  >
    INFORMACIÃ“N DEL SERVICIO
  </a>
</div>
