---
import Layout from "../../layouts/Layout.astro";
import HeaderInterno from "../../components/HeaderInterno.astro";
import SeccionServicios from "../../components/SeccionServicios.astro";
import Cta from "../../components/Cta.astro";
import Seccion from "../../components/Seccion.astro";
import Destacados from "../../components/Destacados.astro";
 
const items = [
  {
    itemtitulo: "Permisos y Licencias",
    descrip:
      "Plan it, create it, launch it. Collaborate seamlessly with all the organization and hit your marketing goals every month with our marketing plan.",
    url: "/servicios/permisos-y-licencias",
    imagen: "image-4.jpg",
  },
  {
    itemtitulo: "Trámites Administrativos",
    descrip:
      "Plan it, create it, launch it. Collaborate seamlessly with all the organization and hit your marketing goals every month with our marketing plan.",
    url: "",
    imagen: "image-4.jpg",
  },
  {
    itemtitulo: "Registros Empresas",
    descrip:
      "Plan it, create it, launch it. Collaborate seamlessly with all the organization and hit your marketing goals every month with our marketing plan.",
    url: "",
    imagen: "image-4.jpg",
  },
 
   
